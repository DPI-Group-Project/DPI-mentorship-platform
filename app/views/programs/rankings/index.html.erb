<div class="container d-flex flex-row">
  <div class="container flex-wrap mt-3 pe-5">
    <h4>Mentors</h4>
    <div class="row row-cols-1 row-cols-lg-2">
      <% @participations.where(role: "mentor").joins(:pairings_as_mentors).group('participations.id').order('COUNT(pairings.id) DESC').each do |participation| %>
        <%= render partial: "programs/rankings/ranking", locals: {participation: participation, program: @program} %>
      <% end %>
    </div>
  </div>

  <div style="border-left:thin solid gray; margin: 0 3"></div>

  <div class="container flex-wrap mt-3 ps-5">
    <h4>Preference rankings</h4>
    <div class="row row-cols-1 row-cols-lg-2">
    <% @participations.where(role: "mentee").each do |participation| %>
      <%= render partial: "programs/rankings/ranking", locals: { participation: participation} %>
    <% end %>
    </div>
  </div>
</div>